<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/cardview"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="200dp"
	android:layout_marginTop="8dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="?android:attr/selectableItemBackgroundBorderless">


			<RelativeLayout
				android:id="@+id/cardview_github_rl_logo"
				android:layout_width="match_parent"
				android:layout_height="96dp"
				android:orientation="horizontal"
				android:background="@drawable/droids_logo"
				android:layout_alignParentTop="true">

			</RelativeLayout>

			<TextView
				android:id="@+id/cardview_github_tv_header"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:gravity="bottom"
				android:background="@drawable/header_shadow"
				android:textColor="@color/text_icon_color"
				android:textSize="24sp"
				android:padding="@dimen/default_padding_size_halved"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:weightSum="3"
				android:layout_below="@id/cardview_github_rl_logo"
				>

				<TextView
					android:id="@+id/cardview_github_tv_stars"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableStart="@drawable/star"
					android:drawablePadding="@dimen/default_padding_size_halved"
					android:textSize="@dimen/default_text_size"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:textColor="@color/primary_text"
					android:padding="@dimen/default_padding_size_halved"
					/>

				<TextView
					android:id="@+id/cardview_github_tv_watchers"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableStart="@drawable/followers"
					android:drawablePadding="@dimen/default_padding_size_halved"
					android:textSize="@dimen/default_text_size"
					android:textColor="@color/primary_text"
					android:padding="@dimen/default_padding_size_halved"
					android:layout_weight="1"/>

				<TextView
					android:id="@+id/cardview_github_tv_forks"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:drawableStart="@drawable/forks"
					android:drawablePadding="@dimen/default_padding_size_halved"
					android:textSize="@dimen/default_text_size"
					android:textColor="@color/primary_text"
					android:padding="@dimen/default_padding_size_halved"
					android:layout_weight="1"/>
			</LinearLayout>

			<!--<View-->
				<!--android:id="@+id/activity_details_vw_circle"-->
				<!--android:layout_height="48dp"-->
				<!--android:layout_width="48dp"-->
				<!--android:background="@drawable/circle"-->
				<!--android:transitionName="reveal"-->
				<!--android:layout_centerInParent="true"-->
				<!--android:layout_alignParentEnd="true"-->
				<!--android:layout_marginEnd="@dimen/default_padding_size"-->
				<!--/>-->

		</RelativeLayout>

	</android.support.v7.widget.CardView>




